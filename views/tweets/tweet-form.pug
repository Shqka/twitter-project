extends ../layout.pug

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container")
            include ../includes/profile

    div(class="flex-fill")
        form(class="card" method="post" action="/api/tweets")

            div(class="card-header") Ã‰crire un tweet

            div(class="card-body")
                div(class="form-group")
                    textarea(class="form-control" name="content" placeholder="What is happening")

                // Gestion des erreurs
                if errors
                    ul(class="my-2")
                        each error in errors
                            li(class="text-danger")= error

                // Bouton d'envoi du formulaire                              
                div(class="w-100")
                    input(type="submit" value="Envoyer" class="btn btn-primary ml-auto d-block")