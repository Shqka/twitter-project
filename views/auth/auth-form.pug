extends ../layout

block content

    div(class="d-flex flex-row content justify-content-center mx-auto")

        form(class="card" method="post" action="/auth/signin")

            div(class="card-header") Connexion

            div(class="card-body")

                div(class="form-group")
                    label Email
                    input(class="form-control" type="email" name="email")
                
                div(class="form-group")
                    label Password
                    input(class="form-control" type="password" name="password")
                
                if errors
                    div(class="w-100")
                        each error in errors
                            p(class="text-danger" style="text-align:center;")= error
                div(class="w-100")
                    input(type="submit" value="Connexion" class="btn btn-primary d-block mx-auto")
